# OmniLoader Studio Configuration
# ================================
# This file contains production settings for OmniLoader Studio.
# Copy to .env and modify as needed.

# API Settings
OMNI_API_HOST=0.0.0.0
OMNI_API_PORT=8000
OMNI_API_WORKERS=1

# UI Settings
OMNI_UI_HOST=0.0.0.0
OMNI_UI_PORT=8501
OMNI_UI_THEME=dark

# Performance Settings (CPU-safe defaults for Windows 10, i5, 16GB RAM)
OMNI_DEFAULT_THREADS=2
OMNI_DEFAULT_MAX_TOKENS=256
OMNI_DEFAULT_TEMPERATURE=0.7
OMNI_DEFAULT_TOP_P=0.9

# Training Defaults
OMNI_LORA_RANK=2
OMNI_LORA_STEPS=40
OMNI_LORA_LR=0.0002

# InductionVM Settings
OMNI_INDUCTION_BACKEND=auto
OMNI_SPEC_DECODE_AHEAD=4
OMNI_KV_COMPRESS_MODE=int8-per-head
OMNI_ROPE_MODE=yarn
OMNI_ROPE_FACTOR=1.3

# PSM Settings
OMNI_PSM_VECTOR_DIM=384
OMNI_PSM_TOPK=6

# Safety Settings
OMNI_AUTO_SNAPSHOT=true
OMNI_AUTO_EVAL=true
OMNI_MAX_GRAD_NORM=1.0

# Paths (relative to project root)
OMNI_MODELS_DIR=models
OMNI_LAB_DIR=lab
OMNI_VICTOR_DIR=victor

# Logging
OMNI_LOG_LEVEL=INFO

# Feature Flags
OMNI_ENABLE_GODCORE=true
OMNI_ENABLE_DEFENSE_AURA=true
OMNI_ENABLE_EPA=true
OMNI_ENABLE_TRANSFER=true
